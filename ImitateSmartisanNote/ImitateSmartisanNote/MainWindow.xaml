    <Grid d:DataContext="{d:DesignData /SampleData/NoteManagerSampleData.xaml}">
        <ItemsControl ItemTemplate="{DynamicResource NoteItemDataTemplate}" ItemsSource="{Binding Notes}" Style="{DynamicResource ItemsControlStyle1}" Padding="0"/>

    </Grid>
</Window>
